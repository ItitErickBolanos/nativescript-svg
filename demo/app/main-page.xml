<Page xmlns="http://schemas.nativescript.org/tns.xsd" 
    xmlns:svg="@nstudio/nativescript-svg" navigatingTo="onNavigatingTo">
    <StackLayout>
        <ScrollView>
            <Label text="Tap the button" class="title"/>
            <Button text="TAP" tap="{{ onTap }}" />
            <Label text="{{ message }}" class="message" textWrap="true"/>
            <svg:SVGImage src="https://github.com/SVGKit/SVGKit/blob/3.x/Demo-Samples/SVG/NewTux.svg" />
            <svg:SVGImage src="~/images/spider.svg" height="250" width="250" />
        </ScrollView>
    </StackLayout>
</Page>